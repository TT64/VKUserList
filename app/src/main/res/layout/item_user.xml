<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/item_user_iv_photo_start_margin"
        android:layout_marginTop="@dimen/item_user_iv_photo_top_margin"
        android:layout_marginBottom="@dimen/item_user_iv_photo_bot_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pers_firstname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_user_tv_start_margin"
        android:layout_marginTop="@dimen/item_user_tv_top_margin"
        android:layout_marginEnd="@dimen/item_user_tv_end_margin"
        android:drawableEnd="@drawable/more"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_user_photo"
        app:layout_constraintTop_toTopOf="@+id/iv_user_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>